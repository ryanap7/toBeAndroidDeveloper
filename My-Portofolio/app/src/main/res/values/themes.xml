<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPortofolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.ExtraBold">
        <item name="android:fontFamily">@font/font_extrabold</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>
</resources>